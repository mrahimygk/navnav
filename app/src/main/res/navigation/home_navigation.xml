<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation.xml"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/list"
        android:name="com.example.navdrawer.ui.nav.ListFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/list_to_show_more"
            app:destination="@id/show_more" />

    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.navdrawer.ui.nav.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.navdrawer.ui.nav.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/show_more"
        android:name="com.example.navdrawer.ui.more.ShowMoreFragment"
        android:label="fdfdf"
        tools:layout="@layout/fragment_show_more" />
</navigation>